<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>
    <main>
        <div class="register-container">
            <h2>Crear Cuenta</h2>

            <form action="/users/register" method="POST" class="registration-form" enctype="multipart/form-data" id="registerForm">
                <div class="form-group">
                    <label for="firstName">Nombre:</label>
                    <input type="text" id="firstName" name="firstName" value="<%= typeof oldData !== 'undefined' ? oldData.firstName : '' %>" required>
                    <% if (typeof errors !== 'undefined' && errors.find(error => error.path === 'firstName')) { %>
                        <p class="error-message"><%= errors.find(error => error.path === 'firstName').msg %></p>
                    <% } %>
                    <small class="error-message" id="firstNameError"></small>
                </div>

                <div class="form-group">
                    <label for="lastName">Apellido:</label>
                    <input type="text" id="lastName" name="lastName" value="<%= typeof oldData !== 'undefined' ? oldData.lastName : '' %>" required>
                    <% if (typeof errors !== 'undefined' && errors.find(error => error.path === 'lastName')) { %>
                        <p class="error-message"><%= errors.find(error => error.path === 'lastName').msg %></p>
                    <% } %>
                    <small class="error-message" id="lastNameError"></small>
                </div>

                <div class="form-group">
                    <label for="username">Nombre de Usuario:</label>
                    <input type="text" id="username" name="username" value="<%= typeof oldData !== 'undefined' ? oldData.username : '' %>" required>
                    <% if (typeof errors !== 'undefined' && errors.find(error => error.path === 'username')) { %>
                        <p class="error-message"><%= errors.find(error => error.path === 'username').msg %></p>
                    <% } %>
                    <small class="error-message" id="usernameError"></small>
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="<%= typeof oldData !== 'undefined' ? oldData.email : '' %>" required>
                    <% if (typeof errors !== 'undefined' && errors.find(error => error.path === 'email')) { %>
                        <p class="error-message"><%= errors.find(error => error.path === 'email').msg %></p>
                    <% } %>
                    <small class="error-message" id="emailError"></small>
                </div>

                <div class="form-group">
                    <label for="password">Contraseña:</label>
                    <input type="password" id="password" name="password" required>
                    <% if (typeof errors !== 'undefined' && errors.find(error => error.path === 'password')) { %>
                        <p class="error-message"><%= errors.find(error => error.path === 'password').msg %></p>
                    <% } %>
                    <small class="error-message" id="passwordError"></small>
                </div>

                <div class="form-group">
                    <label for="confirm_password">Confirmar Contraseña:</label>
                    <input type="password" id="confirm_password" name="confirm_password" required>
                    <% if (typeof errors !== 'undefined' && errors.find(error => error.path === 'confirm_password')) { %>
                        <p class="error-message"><%= errors.find(error => error.path === 'confirm_password').msg %></p>
                    <% } %>
                    <small class="error-message" id="confirmPasswordError"></small>
                </div>

                <div class="form-group">
                    <label for="dateOfBirth">Fecha de Nacimiento:</label>
                    <input type="date" id="dateOfBirth" name="dateOfBirth" value="<%= typeof oldData !== 'undefined' ? oldData.dateOfBirth : '' %>">
                    <% if (typeof errors !== 'undefined' && errors.find(error => error.path === 'dateOfBirth')) { %>
                        <p class="error-message"><%= errors.find(error => error.path === 'dateOfBirth').msg %></p>
                    <% } %>
                    <small class="error-message" id="dateOfBirthError"></small>
                </div>
                
                <div class="form-group">
                    <label for="avatar">Imagen de Perfil:</label>
                    <input type="file" id="avatar" name="avatar" accept="image/*">
                    <div id="avatarPreviewContainer" class="avatar-preview-container">
                        </div>
                    <% if (typeof errors !== 'undefined' && errors.find(error => error.path === 'avatar')) { %>
                        <p class="error-message"><%= errors.find(error => error.path === 'avatar').msg %></p>
                    <% } %>
                    <small class="error-message" id="avatarError"></small>
                </div>

                <div class="checkbox-group">
                    <input type="checkbox" id="terms" name="terms" <%= typeof oldData !== 'undefined' && oldData.terms ? 'checked' : '' %> required>
                    <label for="terms">Acepto los <a href="#">Términos y Condiciones</a></label>
                    <% if (typeof errors !== 'undefined' && errors.find(error => error.path === 'terms')) { %>
                        <p class="error-message"><%= errors.find(error => error.path === 'terms').msg %></p>
                    <% } %>
                    <small class="error-message" id="termsError"></small>
                </div>

                <button type="submit" class="form-submit-button">Registrarse</button>
            </form>

            <div class="login-link-container">
                ¿Ya tienes una cuenta? <a href="/users/login">Inicia Sesión aquí</a>
            </div>
        </div>
    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="/js/registerVal.js"></script>
</body>
</html>